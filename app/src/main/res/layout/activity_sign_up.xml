<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECECEC"
    android:padding="34dp"
    tools:context=".SignUp"
    android:orientation="vertical">

    <ImageView
        android:layout_width="96dp"
        android:layout_height="72dp"
        android:src="@drawable/projectlogo"
        android:layout_gravity="center_horizontal"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:textColorHint="#170342"
        android:layout_marginTop="40dp"
        android:orientation="vertical">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Full name "
            android:id="@+id/edt_name"
            android:ems="10"
            android:inputType="text"
            android:textSize="12sp"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:textColorHint="#170342"
        >
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Your GST Number"
            android:ems="10"
            android:id="@+id/edt_gst"
            android:layout_marginTop="0dp"
            android:inputType="text"
            android:textSize="12sp"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:textColorHint="#170342"
        >
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your email"
            android:id="@+id/edt_mail"
            android:ems="10"
            android:layout_marginTop="0dp"
            android:inputType="text"
            android:textSize="12sp"/>

    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:textColorHint="#170342"
        >
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Mobile No."
            android:id="@+id/edt_mob"
            android:ems="10"
            android:layout_marginTop="0dp"
            android:inputType="text"
            android:textSize="12sp"/>

    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:text="Blood Group : "
            android:ems="10"
            android:id="@+id/txt_ph"
            android:paddingStart="15dp"
            android:textColor="@color/black"
            android:paddingTop="10dp"
            android:layout_marginTop="0dp"
            android:inputType="text"
            android:textSize="12dp"/>

        <Spinner
            android:id="@+id/spin_ph"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="6dp"
            android:foregroundTint="#171616"
            android:visibility="visible"
            tools:visibility="visible">

        </Spinner>
    </LinearLayout>




    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:textColorHint="#170342"
        >
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Password "
            android:ems="10"
            android:id="@+id/edt_pass"
            android:layout_marginTop="0dp"
            android:inputType="text"
            android:textSize="12sp"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:textColorHint="#170342">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Confirm Password"
            android:ems="10"
            android:id="@+id/edt_conf"
            android:layout_marginTop="0dp"
            android:inputType="text"
            android:textSize="12sp"/>

    </com.google.android.material.textfield.TextInputLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="344dp"
        android:layout_height="43dp">


        <TextView

            android:id="@+id/txt_gen"
            android:layout_width="93dp"
            android:layout_height="47dp"
            android:paddingTop="10dp"
            android:paddingStart="15dp"
            android:textColor="@color/black"
            android:text="Gender: "
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <RadioGroup
            android:id="@+id/radio_group"
            android:layout_width="260dp"
            android:layout_height="47dp"
            android:layout_marginStart="84dp"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <RadioButton
                android:id="@+id/radio_male"
                android:layout_width="78dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:text="Male" />

            <RadioButton
                android:id="@+id/radio_female"
                android:layout_width="93dp"
                android:layout_height="47dp"
                android:text="Female" />


        </RadioGroup>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:id="@+id/btn_regis"
        android:layout_marginTop="50dp"
        android:backgroundTint="@color/teal_200"
        android:text="Register"
        android:textColor="#ffffff"
        android:textSize="22sp">


    </Button>
</LinearLayout>



