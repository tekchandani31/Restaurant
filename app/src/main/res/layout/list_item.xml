<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/idMenuItem"
    android:layout_width="190dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="15dp"
    android:layout_margin="5dp"
    app:cardCornerRadius="6dp"
    app:cardElevation="4dp">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txt_listname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/averia_libre_bold"
        android:text="Name"
        android:textColor="#090909"
        android:textSize="22dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_listtype"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_listname"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/averia_libre"
        android:text="type"
        android:textColor="#0B0A0A"
        android:textSize="16dp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/txt_listcost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_listtype"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="12dp"
        android:fontFamily="@font/averia_libre_bold"
        android:text="cost"
        android:textColor="#090808"
        android:textSize="16dp"
        android:textStyle="bold" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_listcost"
        android:backgroundTint="@color/white"
        android:id="@+id/btn_itmcart"
        android:text="Add to Cart"
        android:textColor="@color/black"
        android:layout_marginBottom="6dp"/>



</RelativeLayout>
</androidx.cardview.widget.CardView>